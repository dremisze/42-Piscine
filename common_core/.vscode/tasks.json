{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build current file",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
